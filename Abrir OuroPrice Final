    <div class="calculator">
        <label for="weight">Peso (gramas):</label>
        <input type="number" id="weight" placeholder="Ex: 10.5" step="0.01">

        <label for="purity">Teor (quilates):</label>
        <select id="purity">
            <option value="0.999">Ouro Puro (24k)</option>
            <option value="0.916">18k</option>
            <option value="0.750">18k Médio</option>
            <option value="0.585">14k</option>
            <option value="0.416">10k</option>
        </select>

        <button onclick="calculate()">Calcular Valor</button>

        <div class="result" id="result"></div>
    </div>

    <div class="whatsapp">
        <a href="https://wa.me/5511991114730" target="_blank">Agendar venda no WhatsApp</a>
    </div>

    <script>
        function calculate() {
            const valorPorOnca = 3300; // USD/oz simulado
            const gramasPorOnca = 31.1035;
            const valorPorGramaUSD = valorPorOnca / gramasPorOnca;
            const desagio = 0.20;

            const peso = parseFloat(document.getElementById("weight").value);
            const teor = parseFloat(document.getElementById("purity").value);

            if (!peso || peso <= 0) {
                document.getElementById("result").innerText = "Informe um peso válido.";
                return;
            }

            const valor = peso * teor * valorPorGramaUSD * (1 - desagio);
            document.getElementById("result").innerText = "Valor estimado: U$ " + valor.toFixed(2);
        }
    </script>
